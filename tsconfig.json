{
    "compilerOptions": {
        "outDir": "./build/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "esnext",
        "jsx": "react-jsx",
        "allowJs": true,
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "plugins": [{ "name": "typescript-plugin-css-modules" }],
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "sourceMap": true,
        "isolatedModules": true
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": [
        "./config/jest/setupTests.ts",
        "./src/**/*.tsx",
        "./src/**/*.ts"
    ]
}
